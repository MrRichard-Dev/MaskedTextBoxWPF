<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:SampleMaskedTextBox.UI.Control"
                    xmlns:converters="clr-namespace:SampleMaskedTextBox.UI.Converter">
   
    <BooleanToVisibilityConverter x:Key="TextBoxBoolToVis" />
    <converters:TextEmptyToVisibilityConverter x:Key="TextEmptyToVisibilityConverter" />

    <Style TargetType="{x:Type controls:MaskedTextBoxControl}">
        <Setter Property="Foreground" Value="{StaticResource GrayScale.Levels.7.Brush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource GrayScale.Levels.7.Brush}"/>
        <Setter Property="TextWrapping" Value="NoWrap"/>
        <Setter Property="AcceptsReturn" Value="False"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="MinHeight" Value="25"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="2 0 2 0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:MaskedTextBoxControl}">
                    <Grid VerticalAlignment="Stretch">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock 
                        x:Name="lbl"
                        Text="{TemplateBinding Label}" 
                        Margin="0 0 0 4"
                        FontWeight="SemiBold" 
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch" 
                        Foreground="{StaticResource GrayScale.Levels.7.Brush}"
                        Visibility="{Binding Text, RelativeSource={RelativeSource Self}, Converter={StaticResource TextEmptyToVisibilityConverter}}"/>

                        <Border x:Name="border"
                        Grid.Row="1"
                        SnapsToDevicePixels="True"
                        CornerRadius="5"
                        Background="Transparent" 
                        VerticalAlignment="Stretch"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        Height="{TemplateBinding Height}"
                        MinHeight="{TemplateBinding MinHeight}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>

                                <TextBlock 
                                Text="{TemplateBinding Placeholder}" 
                                FontWeight="{TemplateBinding FontWeight}"     
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Stretch" 
                                Foreground="#B0B9C6"
                                IsHitTestVisible="False" 
                                Panel.ZIndex="1"
                                Margin="2,0,0,1"
                                Visibility="{Binding Path=Text.IsEmpty, 
                                RelativeSource={RelativeSource TemplatedParent}, 
                                Converter={StaticResource TextBoxBoolToVis}}" />

                                <ScrollViewer x:Name="PART_ContentHost" 
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="{TemplateBinding HorizontalAlignment}" />

                            </Grid>
                        </Border>

                    </Grid>
                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="IsKeyboardFocused" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="BorderBrush" TargetName="border" Value="#AA086CF4"/>
                            <Setter Property="Background" Value="{StaticResource WhiteF9.Brush}"/>
                        </MultiTrigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Main.Blue.Brush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="True">
                            <Setter Property="Opacity" Value="1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>