<Page x:Class="SampleMaskedTextBox.UI.View.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SampleMaskedTextBox.UI.View"
      xmlns:controls="clr-namespace:SampleMaskedTextBox.UI.Control"
      mc:Ignorable="d" 
      Background="{StaticResource Background}"
      Title="Home">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Masked TextBox" 
                   FontSize="24" 
                   Foreground="{StaticResource GrayScale.Levels.7.Brush}"
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" />
        
        <Grid Grid.Row="1" Margin="20 20 20 0">
            <controls:MaskedTextBoxControl Label="{Binding Mask, RelativeSource={RelativeSource Self}}" Mask="None" FontSize="16" />
        </Grid>

    </Grid>
</Page>
